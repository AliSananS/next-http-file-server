{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Next.js: debug server-side",
        "type": "node",
        "request": "launch",
        "cwd": "${workspaceFolder}",
        "runtimeExecutable": "npm",
        "runtimeArgs": ["run", "dev"],
        "env": {
          "NHFS_BASE_DIR": "/home/ali"
        },
        "skipFiles": ["<node_internals>/**"],
        "sourceMapPathOverrides": {
          "webpack:///./~/*": "${workspaceFolder}/node_modules/*",
          "webpack://?:*/*": "${workspaceFolder}/*",
          // Temporary Turbopack path
          "/turbopack/[project]/*": "${workspaceFolder}/*",
          // Eventual Turbopack path
          "turbopack://[project]/*": "${workspaceFolder}/*"
        }
      },
      {
        "name": "Next.js: debug client-side",
        "type": "chrome",
        "request": "launch",
        "url": "http://localhost:3000/test-dir",
        "webRoot": "${workspaceFolder}",
        "sourceMaps": true,
        "sourceMapPathOverrides": {
          "/turbopack/[project]/*": "${webRoot}/*",
          "webpack://nextjs-app-14/./*": "${workspaceFolder}/*",
          "webpack://_N_E/./*": "${workspaceFolder}/*"
        },
        "skipFiles": [
          "<node_internals>/**",
          "${workspaceFolder}/node_modules/**",
          "**/next/dist/**",
          "**/webpack/**",
        ],
        "resolveSourceMapLocations": [
          "!**/node_modules/**",
          "!**/tensorflow/**",
          "!**/hot-reloader-client*",
          "!**/runtime-backend-dom*",
          "!**/turbopack/dev/runtime/**"
        ],
        "trace": true,
      }
    ],
    "compounds": [
      {
        "name": "Next.js: debug full stack",
        "configurations": ["Next.js: debug server-side", "Next.js: debug client-side"],
        "stopAll": true
      }
    ]
  }