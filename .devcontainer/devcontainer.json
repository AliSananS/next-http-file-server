{
	"name": "Next.js 15 + Bun + Alpine",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "."
	},
	"settings": {
		"terminal.integrated.shell.linux": "/usr/bin/fish"
	},
	"containerEnv": {
		"SHELL": "/usr/bin/fish"
	},
	"postCreateCommand": "bun --version && fish --version",
	"forwardPorts": [3000],
	"extensions": [
		"esbenp.prettier-vscode", // Prettier formatter :contentReference[oaicite:1]{index=1}
		"dbaeumer.vscode-eslint", // ESLint linting :contentReference[oaicite:2]{index=2}
		"eamodio.gitlens", // GitLens for history & annotations :contentReference[oaicite:3]{index=3}
		"github.copilot", // AI autocomplete :contentReference[oaicite:4]{index=4}
		"ms-vscode.vscode-typescript-next", // TS nightly support
		"xabikos.ReactSnippets", // ES7 React snippets
		"iJS.nextjs-react-snippets", // Next.js-specific snippets :contentReference[oaicite:5]{index=5}
		"vercel.vscode-vercel", // Vercel integration
		"bradlc.vscode-tailwindcss", // Tailwind CSS IntelliSense :contentReference[oaicite:6]{index=6}
		"heybourn.headwind", // Headwind: sorts Tailwind classes :contentReference[oaicite:7]{index=7}
		"styled-components.vscode-styled-components", // styled-components support :contentReference[oaicite:8]{index=8}
		"formulahendry.auto-close-tag", // Auto Close Tag :contentReference[oaicite:9]{index=9}
		"formulahendry.auto-rename-tag", // Auto Rename Tag :contentReference[oaicite:10]{index=10}
		"christian-kohler.path-intellisense", // Path IntelliSense :contentReference[oaicite:11]{index=11}
		"usernamehw.error-lens"
	]
}
